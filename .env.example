# ==============================================
# JestFly Environment Configuration Template
# ==============================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ==============================================
# SUPABASE CONFIGURATION (Required)
# ==============================================
# Get these from your Supabase project dashboard
# Project Settings > API > Project URL and anon/public key
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (Server-side only, DO NOT expose to client)
# Only needed for admin operations and seed scripts
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ==============================================
# WEB3 / BLOCKCHAIN (Optional - for NFT features)
# ==============================================
# Ethereum/Polygon RPC endpoints
VITE_WEB3_PROVIDER_URL=https://polygon-rpc.com
VITE_CHAIN_ID=137

# NFT Contract Addresses (if deployed)
VITE_NFT_CONTRACT_ADDRESS=
VITE_MARKETPLACE_CONTRACT_ADDRESS=

# Wallet Connect Project ID (for wallet integration)
VITE_WALLET_CONNECT_PROJECT_ID=

# ==============================================
# PAYMENT PROVIDERS (Optional - for commerce)
# ==============================================
# Stripe
VITE_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal (if using)
VITE_PAYPAL_CLIENT_ID=

# ==============================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ==============================================
# Google OAuth
VITE_GOOGLE_CLIENT_ID=

# Analytics
VITE_GOOGLE_ANALYTICS_ID=
VITE_MIXPANEL_TOKEN=

# Email Service (SendGrid, Resend, etc.)
EMAIL_SERVICE_API_KEY=
EMAIL_FROM_ADDRESS=noreply@jestfly.com
EMAIL_FROM_NAME=JestFly

# ==============================================
# STORAGE & CDN (Optional)
# ==============================================
# Cloudinary for image optimization
VITE_CLOUDINARY_CLOUD_NAME=
VITE_CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ==============================================
# APPLICATION SETTINGS
# ==============================================
# Environment (development, staging, production)
VITE_APP_ENV=development

# Base URL for the application
VITE_APP_URL=http://localhost:5173

# API Base URL (if separate backend)
VITE_API_BASE_URL=

# ==============================================
# FEATURE FLAGS (Optional)
# ==============================================
VITE_ENABLE_COMMUNITY=true
VITE_ENABLE_NFT_MARKETPLACE=true
VITE_ENABLE_BOOKINGS=true
VITE_ENABLE_LIVESTREAM=true
VITE_ENABLE_AIRDROP=true

# ==============================================
# SECURITY & RATE LIMITING (Production)
# ==============================================
# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ==============================================
# LOGGING & MONITORING (Production)
# ==============================================
# Sentry for error tracking
VITE_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ==============================================
# DEVELOPMENT ONLY
# ==============================================
# Enable debug mode
VITE_DEBUG_MODE=false

# Mock API responses (for testing without backend)
VITE_USE_MOCK_API=false
